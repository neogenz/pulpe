{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "build/**"],
      "passThroughEnv": ["DOTENV_CONFIG_PATH"],
      "env": [
        "PUBLIC_*",
        "POSTHOG_*"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "watch": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "start": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "start:dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "lint": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "**/*.{ts,tsx,js,jsx}",
        "eslint.config.{js,ts}"
      ]
    },
    "lint:fix": {
      "dependsOn": ["^build"],
      "cache": false,
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "**/*.{ts,tsx,js,jsx}",
        "eslint.config.{js,ts}"
      ]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": [],
      "passThroughEnv": [
        "SUPABASE_URL",
        "SUPABASE_ANON_KEY",
        "SUPABASE_SERVICE_ROLE_KEY",
        "TURNSTILE_SECRET_KEY"
      ]
    },
    "test:watch": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "test:performance": {
      "dependsOn": ["^build"],
      "outputs": [],
      "passThroughEnv": [
        "SUPABASE_URL",
        "SUPABASE_ANON_KEY",
        "SUPABASE_SERVICE_ROLE_KEY"
      ]
    },
    "test:e2e": {
      "dependsOn": ["^build", "build"],
      "outputs": ["playwright-report/**", "test-results/**", "e2e-results/**"]
    },
    "format": {
      "outputs": [],
      "inputs": ["**/*.{ts,tsx,js,jsx,json,md,yml,yaml}"]
    },
    "format:check": {
      "outputs": [],
      "inputs": ["**/*.{ts,tsx,js,jsx,json,md,yml,yaml}"]
    },
    "format:write": {
      "cache": false,
      "outputs": []
    },
    "format:test": {
      "outputs": []
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": ["*.tsbuildinfo"],
      "inputs": ["**/*.{ts,tsx}", "tsconfig*.json"]
    },
    "type-check:full": {
      "dependsOn": ["^build"],
      "outputs": ["*.tsbuildinfo"],
      "inputs": ["**/*.{ts,tsx}", "tsconfig*.json"]
    },
    "typecheck:spec": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": ["**/*.{ts,tsx}", "tsconfig*.json"]
    },
    "quality": {
      "dependsOn": [
        "^build",
        "type-check",
        "typecheck:spec",
        "lint",
        "format:check"
      ]
    },
    "quality:fix": {
      "dependsOn": [
        "^build",
        "type-check",
        "typecheck:spec",
        "lint:fix",
        "format"
      ],
      "cache": false
    },
    "clean": {
      "cache": false,
      "outputs": []
    },
    "checks": {
      "dependsOn": [
        "build",
        "quality:fix",
        "quality",
        "test",
        "test:e2e",
        "test:performance"
      ],
      "cache": false
    }
  }
}
