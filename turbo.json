{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "build/**"],
      "passThroughEnv": ["DOTENV_CONFIG_PATH"],
      "env": [
        "NODE_ENV",
        "PUBLIC_SUPABASE_URL",
        "PUBLIC_SUPABASE_ANON_KEY",
        "PUBLIC_BACKEND_API_URL",
        "PUBLIC_ENVIRONMENT",
        "PUBLIC_POSTHOG_API_KEY",
        "PUBLIC_POSTHOG_HOST",
        "PUBLIC_POSTHOG_ENABLED",
        "PUBLIC_POSTHOG_CAPTURE_PAGEVIEWS",
        "PUBLIC_POSTHOG_CAPTURE_PAGELEAVES",
        "PUBLIC_POSTHOG_SESSION_RECORDING_ENABLED",
        "PUBLIC_POSTHOG_MASK_INPUTS",
        "PUBLIC_POSTHOG_SAMPLE_RATE",
        "PUBLIC_POSTHOG_DEBUG",
        "POSTHOG_PERSONAL_API_KEY",
        "POSTHOG_HOST",
        "POSTHOG_CLI_ENV_ID"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "watch": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "start": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "start:dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "lint": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "**/*.{ts,tsx,js,jsx}",
        "eslint.config.{js,ts}"
      ]
    },
    "lint:fix": {
      "dependsOn": ["^build"],
      "cache": false,
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "**/*.{ts,tsx,js,jsx}",
        "eslint.config.{js,ts}"
      ]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "test:watch": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "test:performance": {
      "dependsOn": ["^build"],
      "outputs": ["test-results.json", "test-results/**"]
    },
    "test:e2e": {
      "dependsOn": ["^build"],
      "outputs": ["playwright-report/**", "test-results/**", "e2e-results/**"]
    },
    "format": {
      "outputs": [],
      "inputs": ["**/*.{ts,tsx,js,jsx,json,md,yml,yaml}"]
    },
    "format:check": {
      "outputs": [],
      "inputs": ["**/*.{ts,tsx,js,jsx,json,md,yml,yaml}"]
    },
    "format:write": {
      "cache": false,
      "outputs": []
    },
    "format:test": {
      "outputs": []
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": ["*.tsbuildinfo"],
      "inputs": ["**/*.{ts,tsx}", "tsconfig*.json"]
    },
    "type-check:full": {
      "dependsOn": ["^build"],
      "outputs": ["*.tsbuildinfo"],
      "inputs": ["**/*.{ts,tsx}", "tsconfig*.json"]
    },
    "quality": {
      "dependsOn": ["^build", "type-check", "lint", "format:check"]
    },
    "quality:fix": {
      "dependsOn": ["^build", "type-check", "lint:fix", "format"],
      "cache": false
    },
    "clean": {
      "cache": false,
      "outputs": []
    }
  }
}
