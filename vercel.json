{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "turbo build --filter=pulpe-frontend && pnpm --filter=pulpe-frontend upload:sourcemaps && pnpm build:landing && pnpm build:merge",
  "outputDirectory": "dist",
  "installCommand": "pnpm install --frozen-lockfile --filter=pulpe-frontend --filter=pulpe-shared --filter=pulpe-landing --ignore-scripts",
  "framework": "angular",
  "redirects": [
    {
      "source": "/app/current-month",
      "destination": "/dashboard",
      "permanent": true
    },
    {
      "source": "/app/budget/:path*",
      "destination": "/budget/:path*",
      "permanent": true
    },
    {
      "source": "/app/budget-templates/:path*",
      "destination": "/budget-templates/:path*",
      "permanent": true
    },
    {
      "source": "/app/settings/:path*",
      "destination": "/settings/:path*",
      "permanent": true
    },
    {
      "source": "/app/complete-profile",
      "destination": "/complete-profile",
      "permanent": true
    },
    {
      "source": "/app",
      "destination": "/dashboard",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/",
      "destination": "/landing/index.html"
    },
    {
      "source": "/screenshots/:path*",
      "destination": "/landing/screenshots/:path*"
    },
    {
      "source": "/icon.png",
      "destination": "/landing/icon.png"
    },
    {
      "source": "/icon-64.webp",
      "destination": "/landing/icon-64.webp"
    },
    {
      "source": "/icon-64.png",
      "destination": "/landing/icon-64.png"
    },
    {
      "source": "/app-store-badge.svg",
      "destination": "/landing/app-store-badge.svg"
    },
    {
      "source": "/landing/_next/:path*",
      "destination": "/landing/_next/:path*"
    },
    {
      "source": "/_next/:path*",
      "destination": "/landing/_next/:path*"
    },
    {
      "source": "/:path*",
      "destination": "/_app.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
