{
  "name": "pulpe-workspace",
  "version": "1.0.0",
  "private": true,
  "description": "Pulpe monorepo workspace",
  "scripts": {
    "dev": "run-p dev:shared dev:frontend dev:backend",
    "dev:shared": "pnpm --filter @pulpe/shared run dev",
    "dev:frontend": "pnpm --filter pulpe-frontend run start",
    "dev:backend": "cd backend-nest && bun run dev",
    "build": "pnpm run build:shared && run-p build:frontend build:backend",
    "build:shared": "pnpm --filter @pulpe/shared run build",
    "build:frontend": "pnpm --filter pulpe-frontend run build", 
    "build:backend": "cd backend-nest && bun run build",
    "shared:watch": "pnpm --filter @pulpe/shared run dev",
    "shared:build": "pnpm --filter @pulpe/shared run build",
    "dev:frontend-only": "run-p shared:watch dev:frontend",
    "dev:backend-only": "run-p shared:watch dev:backend"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}