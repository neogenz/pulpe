{
  "tailwindCSS.lint.invalidConfigPath": "ignore",
  "eslint.workingDirectories": [
    {
      "pattern": "frontend/"
    },
    {
      "pattern": "backend/"
    }
  ],
  "eslint.format.enable": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  // Configuration par type de fichier
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  // Configuration sp√©cifique Flutter (si besoin)
  "[dart]": {
    "editor.formatOnSave": true,
    "editor.rulers": [80]
  },

  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.angular": true,
    "**/pnpm-lock.yaml": true
  }
}
