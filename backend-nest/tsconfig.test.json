{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "ES6"],
    "types": ["reflect-metadata", "bun-types", "@types/node"],
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "test/**/*", "**/*.spec.ts", "**/*.test.ts"],
  "exclude": ["node_modules", "dist", "coverage"]
}
