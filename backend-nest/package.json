{
  "name": "backend-nest",
  "version": "0.1.0",
  "description": "NestJS backend for Pulpe Budget API",
  "main": "dist/main.js",
  "scripts": {
    "build": "bun build src/main.ts --outdir=dist --target=node --minify --packages=external",
    "start": "NODE_ENV=development bun src/main.ts",
    "dev": "bun run supabase:start && NODE_ENV=development bun --env-file=.env.local --watch src/main.ts",
    "dev:watch": "NODE_ENV=development bun --watch src/main.ts & bunx tsc --watch --project tsconfig.json",
    "start:prod": "NODE_ENV=production bun dist/main.js",
    "dump:db": "bunx supabase db dump --schema public --file schema.sql",
    "generate-types": "bun x supabase gen types typescript --project-id xvrbcvltpkqwiiexvfxh --schema public > src/types/database.types.ts",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:status": "supabase status",
    "supabase:restart": "supabase stop && supabase start",
    "supabase:reset": "supabase db reset",
    "supabase:diff": "supabase db diff --schema public",
    "supabase:push": "supabase db push",
    "supabase:pull": "supabase db pull",
    "supabase:seed": "supabase seed buckets",
    "dev:local": "NODE_ENV=development bun --env-file=.env.local --watch src/main.ts",
    "generate-types:local": "bun x supabase gen types typescript --local > src/types/database.types.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:unit": "bun test src/modules/budget/budget.service.spec.ts src/modules/transaction/transaction.service.spec.ts src/common/guards/auth.guard.spec.ts",
    "test:integration": "echo 'No integration tests yet'",
    "test:performance": "DEBUG_PERFORMANCE=true bun test src/modules/budget/budget.performance.spec.ts",
    "test:load": "DEBUG_PERFORMANCE=true bun test --pattern='*.performance.spec.ts' --timeout=30000",
    "test:all": "bun run test:unit && bun run test:integration && bun run test:performance",
    "test:ci": "bun test --coverage --reporter=json > test-results.json",
    "test:silent": "bun test --silent",
    "lint": "bunx eslint .",
    "lint:fix": "bunx eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check:full": "bunx tsc --project tsconfig.full-check.json --noEmit",
    "quality": "bun run type-check:full && bun run lint && bun run format:check",
    "quality:fix": "bun run type-check:full && bun run lint:fix && bun run format"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@nestjs/common": "^11.1.3",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.3",
    "@nestjs/platform-express": "^11.1.3",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/throttler": "^6.4.0",
    "@pulpe/shared": "workspace:*",
    "@supabase/supabase-js": "^2.50.0",
    "@types/compression": "^1.8.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "compression": "^1.8.1",
    "curl-generator": "^0.4.2",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "nestjs-pino": "^4.4.0",
    "nestjs-zod": "^4.3.1",
    "pino": "^9.7.0",
    "pino-http": "^10.5.0",
    "pino-pretty": "^13.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@darraghor/eslint-plugin-nestjs-typed": "^6.7.0",
    "@eslint/js": "^9.15.0",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/testing": "^11.1.3",
    "@types/express": "^5.0.3",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "bun-types": "^1.2.17",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-boundaries": "^4.2.2",
    "eslint-plugin-prettier": "^5.5.1",
    "supabase": "^2.33.9",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.2",
    "uuid": "^11.1.0"
  }
}
