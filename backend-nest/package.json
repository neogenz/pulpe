{
  "name": "backend-nest",
  "version": "1.0.0",
  "description": "NestJS backend for Pulpe Budget API",
  "main": "dist/main.js",
  "scripts": {
    "build": "bun build src/main.ts --outdir=dist --target=node --minify --packages=external",
    "start": "bun src/main.ts",
    "start:dev": "bun --watch src/main.ts",
    "start:prod": "bun dist/main.js",
    "dump:db": "bunx supabase db dump --schema public --file schema.sql",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:unit": "bun test --pattern='*.service.spec.ts' --pattern='*.guard.spec.ts'",
    "test:integration": "bun test --pattern='*.integration.spec.ts'",
    "test:performance": "DEBUG_PERFORMANCE=true bun test --pattern='*.performance.spec.ts'",
    "test:load": "DEBUG_PERFORMANCE=true bun test --pattern='*.performance.spec.ts' --timeout=30000",
    "test:all": "bun run test:unit && bun run test:integration && bun run test:performance",
    "test:ci": "bun test --coverage --reporter=json > test-results.json",
    "test:silent": "bun test --silent",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "quality": "bun run type-check && bun run lint && bun run format:check",
    "quality:fix": "bun run type-check && bun run lint:fix && bun run format",
    "pre-commit": "bun run quality:fix && bun run test:all"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@nestjs/common": "^11.1.3",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.3",
    "@nestjs/platform-express": "^11.1.3",
    "@nestjs/swagger": "^11.2.0",
    "@pulpe/shared": "file:../shared",
    "@supabase/supabase-js": "^2.50.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "nestjs-pino": "^4.4.0",
    "nestjs-zod": "^4.3.1",
    "pino-http": "^10.5.0",
    "pino-pretty": "^13.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "zod": "^3.25.64"
  },
  "devDependencies": {
    "@darraghor/eslint-plugin-nestjs-typed": "^6.7.0",
    "@eslint/js": "^9.15.0",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/testing": "^11.1.3",
    "@types/express": "^5.0.3",
    "@types/node": "^22.15.31",
    "@types/supertest": "^6.0.2",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-boundaries": "^4.2.2",
    "eslint-plugin-prettier": "^5.5.1",
    "prettier": "^3.3.3",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.15.0"
  }
}
