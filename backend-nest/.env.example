# Environment Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:4200

# Debug Configuration
# Set to 'true' to enable full HTTP debug logging (body, headers, params, cURL commands)
# WARNING: This will log sensitive data - use only in development!
DEBUG_HTTP_FULL=false

# Supabase Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Service Role Key (REQUIRED for demo cleanup and admin operations)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Rate Limiting Configuration (default throttler context)
# TTL: Time window in milliseconds (60000 = 1 minute)
# LIMIT: Maximum requests per TTL window (1000 = 1000 requests per minute)
THROTTLE_TTL=60000
THROTTLE_LIMIT=1000

# Cloudflare Turnstile Configuration (REQUIRED for anti-bot demo mode protection)
TURNSTILE_SECRET_KEY=your_turnstile_secret_key

# Google OAuth Configuration (for Supabase local development)
# Get these from Google Cloud Console: https://console.cloud.google.com/apis/credentials
SUPABASE_AUTH_EXTERNAL_GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
SUPABASE_AUTH_EXTERNAL_GOOGLE_SECRET=your_google_client_secret
